<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaPrincipal">

    <Button
        android:id="@+id/bt_relatar_sumico"
        android:layout_width="255dp"
        android:layout_height="63dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Relatar SumiÃ§o"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_lista_pets" />

    <Button
        android:id="@+id/bt_lista_pets"
        android:layout_width="255dp"
        android:layout_height="63dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Lista de Pets"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_meus_pets" />

    <Button
        android:id="@+id/bt_editar_perfil"
        android:layout_width="255dp"
        android:layout_height="63dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:text="Editar Perfil"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_boas_vindas" />

    <Button
        android:id="@+id/bt_meus_pets"
        android:layout_width="255dp"
        android:layout_height="63dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:text="Meus Pets"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_editar_perfil" />

    <TextView
        android:id="@+id/tv_boas_vindas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="Boas vindas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>