<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_foto_pet_lista"
        android:layout_width="120dp"
        android:layout_height="113dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gato" />

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_foto_pet_lista"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_nome_pet_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Nome do Pet" />

        <TextView
            android:id="@+id/tv_detalhes_pet_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes do Pet"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cidade_pet_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cidade do Pet"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nome_dono_pet_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Nome do Dono" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>