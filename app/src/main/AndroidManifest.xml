<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.petfound">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetFound"
        tools:targetApi="31">
        <activity
            android:name=".EditorPet"
            android:exported="false" />
        <activity
            android:name=".MeusPets"
            android:exported="false" />
        <activity
            android:name=".EditorUsuario"
            android:exported="false" />
        <activity
            android:name=".DetalhesPet"
            android:exported="false" />
        <activity
            android:name=".ListaPets"
            android:exported="false" />
        <activity
            android:name=".RegistroPet"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistroUsuario"
            android:exported="true"
            android:label="Registro Usuario" />
        <activity
            android:name=".TelaPrincipal"
            android:exported="true"
            android:label="Tela Principal" />
    </application>

</manifest>